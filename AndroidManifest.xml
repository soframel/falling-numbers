<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.soframel.fallingnumbers"
          android:versionCode="1"
          android:versionName="1.0"
        >
    <uses-sdk android:minSdkVersion="17"/>
    <application android:label="@string/app_name" android:icon="@drawable/icon">
        <activity android:name="org.soframel.fallingnumbers.MainActivity"
                  android:label="@string/app_name"
                  android:configChanges="locale"
                >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="org.soframel.fallingnumbers.PlayActivity"
                  android:label="@string/app_name">
        </activity>
        <activity android:name="org.soframel.fallingnumbers.EndOfGameActivity"
                  android:label="@string/end_of_game_name">
        </activity>
        <activity android:name="org.soframel.fallingnumbers.settings.SettingsActivity"
                  android:label="@string/action_settings"
                  android:configChanges="locale"
                >
        </activity>

    </application>
</manifest>
